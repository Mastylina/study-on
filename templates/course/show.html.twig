{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Название курса</th>
            <td>{{ course.name }}</td>
        </tr>
        <tr>
            <th>Описание</th>
            <td>{{ course.description }}</td>
        </tr>
        <tr>
            <h3>Список уроков:</h3>
            <ol>
                {% for lesson in course.lessons|sort((a,b)=> a.number <=> b.number ) %}
                    <li>
                        <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">
                            {{ lesson.name }}</a>
                    </li>
                {% endfor %}
            </ol>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">Вернутся к списку</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Изменить</a>
    <a href="{{ path('app_lesson_new', {'course': course.id}) }}">Новый урок</a>
    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
