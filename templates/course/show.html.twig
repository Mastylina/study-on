{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name_course</th>
            <td>{{ course.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ course.description }}</td>
        </tr>
        <tr>
            <ol>
                {% for lesson in course.lessons|sort((a,b)=> a.number <=> b.number ) %}
                    <li>

                        <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">
                            {{ lesson.name }}</a>
                    </li>
                {% endfor %}
            </ol>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>
    <a href="{{ path('app_course_new') }}">new</a>
    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
