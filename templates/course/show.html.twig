{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    {{ course.description }}

    <h3>Уроки:</h3>
    <ol>
        {% for lesson in lessons %}
            <li>
                <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">
                    {{ lesson.name }}</a>
            </li>
        {% endfor %}
    </ol>
<div class="row">
    <div class="col-sm-1">
    <a class="btn btn-outline-info mt-3" href="{{ path('app_course_index') }}">Вернуться к списку</a>
    </div>
    <div class="col-sm-1">
    <a class="btn btn-outline-success mt-3" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
    </div>
    <div class="col-sm-1">
    <a class="btn btn-outline-danger mt-3" href="{{ path('app_lesson_new', {'course': course.id}) }}">Добавить урок</a>
    </div>
    <div class="col-sm-1">
    {{ include('course/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
