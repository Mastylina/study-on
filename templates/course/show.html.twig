{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>{{ course.name }}</h1>
        {{ course.description }}

        <h3>Уроки:</h3>
        <ol>
            {% for lesson in lessons %}
                <li>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">
                        {{ lesson.name }}</a>
                </li>
            {% endfor %}
        </ol>
        <div class="row row-cols-auto">
            <div class="col">
                <a class="btn btn-outline-secondary mt-3" href="{{ path('app_course_index') }}">Вернуться к списку</a>
            </div>
            <div class="col">
                <a class="course__edit btn btn-outline-secondary mt-3" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать
                    курс</a>
            </div>
            <div class="col">
                <a class="lesson__new btn btn-outline-secondary mt-3" href="{{ path('app_lesson_new', {'course': course.id}) }}">Добавить
                    урок</a>
            </div>
            <div class="col">
                {{ include('course/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
