{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Курсы</h1>
    <div class="container-fluid">
        <div class="row">
            {% for course in courses %}

                <div class="col-sm-6 my-md-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ course.name }}</h5>
                            <p class="card-text">{{ course.description }}</p>
                            <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-outline-primary my-2 course-show">Пройти</a>
                        </div>
                    </div>
                </div>

            {% else %}
                colspan="5">no records found
            {% endfor %}
        </div>
    </div>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="course__new btn btn-outline-secondary mt-3" href="{{ path('app_course_new') }}">Новый курс</a>
    {% endif %}
{% endblock %}
