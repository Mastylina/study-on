{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>{{ lesson.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <a> Курс </a>
                <a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-sm-1">
                <a class="lesson__edit btn btn-outline-success mt-3" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
            </div>
            <div class="col-sm-1">
                {{ include('lesson/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="container-fluid border border-2 border-secondary mt-3">
            <td>{{ lesson.content }}</td>
        </div>
    </div>
{% endblock %}
