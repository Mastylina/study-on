{% extends 'base.html.twig' %}

{% block title %}{{ email }}{% endblock %}

{% block body %}

    <div class="card my-2 course-card w-100">
        <div class="card-header">
            Профиль {{ email }}
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
            <p class="card-text">Роль: {{ role }}</p>
            <p class="card-text">Баланс: {{ balance }}</p>
        </div>
        <a class="btn btn-outline-info" href="{{ path('profile_history') }}" role="button">
            Перейти к моей истории
        </a>
    </div>

{% endblock %}